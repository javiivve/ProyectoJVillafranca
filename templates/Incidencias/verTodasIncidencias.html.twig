{% extends 'base.html.twig' %}

{% block title %}Lista de incidencias{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/estilosMenu.css') }}">
        <link rel="stylesheet" href="{{ asset('css/estilosPrincip.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

{% endblock %}

{% block body %}

<div class="menu">
    <div>
        <a href="{{ path('verTodosClientes') }}">Clientes</a>
        <a href="{{ path('verTodasIncidencias') }}">Incidencias</a>
    </div>
    {% if app.user %}
    <div class="usuario">
        <img src="/images/{{ app.user.foto }}" alt="User Profile Picture">
        <span class="email">{{ app.user.userIdentifier }}</span>
        <a href="{{ path('app_logout') }}" class="cerrar-sesion-link">Cerrar sesión</a>
    </div>
    {% endif %}
</div>

<div class="example-wrapper">
    <div class="example-content">
        <h2>INCIDENCIAS:</h2> 
        {% if incidencias is not empty %}
            {% for incidencia in incidencias %}
                <div class="incidencia">
                    <a href="{{ path('verIncidenciaDos',{id: incidencia.id}) }}" class="titulo">{{ incidencia.titulo }}</a>
                </div>
            {% endfor %}
              <a href="{{ path('addIncidenciaDos') }}" class="añadir-incidencia-link">Añadir incidencia</a>
        {% else %}
            <p>No hay incidencias registradas.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
